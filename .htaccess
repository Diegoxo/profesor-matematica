# Habilitar motor de reescritura
RewriteEngine On

# 1. Quitar la extensión .html de las URLs (Redirección 301 para SEO)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ %1 [L,R=301]

# 2. Servir el archivo .html aunque no esté en la URL
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# 3. Opcional: Redirigir index.html a la raíz
RewriteRule ^index$ / [L,R=301]
RewriteCond %{THE_REQUEST} ^.*/index\.html
RewriteRule ^(.*)index\.html$ /$1 [L,R=301]
